<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

<body class="cream-bg">

<div class="container" style="max-width: 700px; margin-top: 40px;">

    <h1>Create Task for Study {{studyId}}</h1>

    {{#errorMessage}}
        <p class="error-message">{{.}}</p>
    {{/errorMessage}}

    <form action="/studies/{{studyId}}/tasks/create" method="POST" class="form-card">

        <label for="taskOrder">Task Order</label>
        <input type="number" id="taskOrder" name="taskOrder" required min="1"
               placeholder="1 = first task, 2 = second task, etc">

        <label for="description">Task Description</label>
        <textarea id="description" name="description" rows="4" required
                  placeholder="Describe the task the participant must complete"></textarea>

        <label for="successCriteria">Success Criteria</label>
        <textarea id="successCriteria" name="successCriteria" rows="3" required
                  placeholder="Describe what counts as successful completion"></textarea>

        <label for="expectedCompTime">Expected Completion Time (minutes)</label>
        <input type="number" id="expectedCompTime" name="expectedCompTime" required min="1" max="999"
               placeholder="e.g., 3">

        <br><br>

        <button type="submit" class="btn primary">Create Task</button>
    </form>

    <br>
    <a class="btn secondary" href="/studies/{{studyId}}/tasks">â† Back to Tasks</a>

</div>

{{> fragments/footer}}
</body>
</html>
