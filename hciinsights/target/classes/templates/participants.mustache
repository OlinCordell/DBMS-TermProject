<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header }}

<body>
{{> fragments/navbar }}

<div class="container">

    <h2>Participants</h2>

    <div style="margin: 20px 0;">
        <a class="btn" href="/participants/create">+ Add Participant</a>
    </div>

    {{#participants}}
        <div class="card">
            <h3>{{fullName}}</h3>
            <p><strong>Age:</strong> {{age}}</p>
            <p><strong>Occupation:</strong> {{occupation}}</p>
            <p><strong>Experience:</strong> {{occupationExp}}</p>
            <p><strong>Email:</strong> {{email}}</p>

            <a class="btn" href="/participants/{{participantId}}">View</a>
        </div>
    {{/participants}}

    {{^participants}}
        <p>No participants found.</p>
    {{/participants}}

</div>
{{> fragments/footer }}
</body>
</html>
