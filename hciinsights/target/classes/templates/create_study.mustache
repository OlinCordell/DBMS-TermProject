<!DOCTYPE html>
<html lang="en">
{{> fragments/html_header}}

{{> fragments/navbar }}

<body>

<div class="container center-align" style="max-width: 600px; margin-top: 40px;">

    <h1>Create a Study</h1>

    {{#loggedInUser}}
        <p>Logged in as <strong>{{username}}</strong></p>
    {{/loggedInUser}}

    {{#errorMessage}}
        <p class="error-message">{{.}}</p>
    {{/errorMessage}}

    <form action="/studies/create" method="POST" class="form-card">

        <label for="title">Study Title</label>
        <input type="text" id="title" name="title" required placeholder="Enter study title">

        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4" required
                  placeholder="Brief explanation of the study"></textarea>

        <label for="platform">Platform</label>
        <input type="text" id="platform" name="platform" required
               placeholder="e.g., Mobile, Web, VR, Desktop">

        <label for="status">Status</label>
        <select id="status" name="status">
            {{#statuses}}
                <option value="{{.}}">{{.}}</option>
            {{/statuses}}
        </select>

        <br><br>

        <button type="submit" class="btn">Create Study</button>
    </form>

    <br>
    <a href="/studies">‚Üê Back to Studies</a>
</div>

{{> fragments/footer}}
</body>
</html>
